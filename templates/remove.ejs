  <body>
    <h1>Removing All Pokemon</h1>

    <fieldset>
      <hr />
      <form action="/removeConfirm" method="post" onsubmit="return validate()">
        <input type="submit" value="Remove all Pokemon" />
        <hr />
      </form>
      <script>
        function validate() {
          if (
            window.confirm(
              "Are you sure you want to remove all favorite pokemon? This action cannot be undone"
            )
          ) {
            return true;
          } else {
            return false;
          }
        }
      </script>
    </fieldset>
